<Window x:Class="BankWPF.Adding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Label x:Name="Error"
                   Content="Check the entered data"
                   Visibility="Hidden"
                   Foreground="Red"
                   Margin="10"/>
            <ComboBox Margin="10">
                    
            </ComboBox>
            <StackPanel Orientation="Horizontal" 
                        Margin="10">
                <Label Content="Sum"/>
                <TextBox x:Name="Sum"
                         Width="150"/>
            </StackPanel>
            <Button Margin="10"
                    Content="Add"
                    Height="30"
                    Click="AddAccount"/>
        </StackPanel>
    </Grid>
</Window>
